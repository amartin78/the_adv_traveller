<% @body_id='destinations' %>
<% cache(cache_key_for_products) do %>
  <% @products.each do |product| %>
    <% if product.id.odd? %>
      <div class="container product">
        <div class="row-feautures">
          <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <% cache(product.image_src) do %>
              <img src="<%= product.image_src %>" width="250px" height="200px">
            <% end %>
          </div>
        </div>
        <div class="row-testimonials">
          <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
              <h2>
                <% cache(product.name) do %>
                  <%= link_to product.name, product %>
                <% end %>
              </h2>
              <p>
                <% cache(product.description) do %>
                  <%= product.description %>
                <% end %>
              </p>
            <div>
              <ul class="product p-left">
                <li>
                  <% cache(product.months) do %>
                    Months: <%= product.months %>
                  <% end %>
                </li>
                <li>
                  Price: 
                  <% cache(product.price) do %>
                    <%= number_to_currency(product.price, precision: 2, unit: '£') %>
                  <% end %>
                </li>
              </ul>
              <!-- <ul class="product p-right">
                <li>
                  <% cache((product.id).to_s + "show") do %>
                    <%= link_to 'Show', product %>
                  <% end %>
                </li>
                <li>
                  <% cache((product.id).to_s + "edit") do %>
                    <%= link_to 'Edit', edit_product_path(product) %>
                  <% end %>
                </li>
                <li>
                  <% cache((product.id).to_s + "destroy")do %>
                    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
                </li>
              </ul> -->
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="container product">
        <div class="row-testimonials">
          <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
              <h2>
                <% cache(product.name) do %>
                  <%= link_to product.name, product %>
                <% end %>
              </h2>
              <p>
                <% cache(product.description) do %>
                  <%= product.description %>
                <% end %>
              </p>
            <div>
              <ul class="product p-right">
                <li>Months: 
                  <% cache(product.months) do %>
                    <%= product.months %>
                  <% end %>
                <li>
                  Price: 
                  <% cache(product.price) do %>
                    <%= number_to_currency(product.price, precision: 2, unit: '£') %>
                  <% end %>
                </li>
              </ul>
              <!-- <ul class="product p-left">
                <li>
                  <% cache((product.id).to_s + "show") do %>
                    <%= link_to 'Show', product %>
                  <% end %>
                </li>
                <li>
                  <% cache((product.id).to_s + "edit") do %>
                    <%= link_to 'Edit', edit_product_path(product) %>
                  <% end %>
                <li>
                  <% cache((product.id).to_s + "destroy") do %>
                    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
                </li>
              </ul> -->
            </div>
          </div>
        </div>
        <div class="row-feautures">
          <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <% cache(product.image_src) do %>
              <img src="<%= product.image_src %>" width="250px" height="200px">
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
