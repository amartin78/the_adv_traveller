<% @body_id = 'destinations' %>
<div class="container">
  <div class="col-xs-1 col-sm-3 col-md-3 col-lg-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Travel Tips</h3>
      </div>
      <div class="panel-body" id="tips">
        <ul>
          <li>Time Zone</li>
          <li>UTC/GMT + 3:00hours</li>
          <li>Languages</li>
          <li>Swahili, English</li>
          <li>Foreign Exchange Rate</li>
