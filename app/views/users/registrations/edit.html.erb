<div class="row">
  <div class="col-md-8 col-md-push-2">
    <%= form_for(resource, as: resource_name, builder: BootstrapFormBuilder, url: registration_path(resource_name), html: { method: :put, id: 'edMyProfile' }) do |f| %>
      <%= devise_error_messages! %>
      <h4 class="bg-primary">Edit Profile</h4>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="usr_fname">First Name</label>
            <input type="text" class="form-control" id="usr_fname" placeholder="First Name">
          </div>
          <div class="form-group">
            <label for="usr_lname">Last Name</label>
            <input type="text" class="form-control" id="usr_lname" placeholder="Last Name">
          </div>
          <%= f.email_field :email %>
          <div class="form-group">
            <label for="usr_address1">Address 1</label>
            <input type="text" class="form-control" id="usr_address1" placeholder="Address Ln 1">
          </div>
          <div class="form-group">
            <label for="usr_address2">Address 2</label>
            <input type="text" class="form-control" id="usr_address2" placeholder="Address Ln 2">
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="usr_city">City</label>
            <input type="text" class="form-control" id="usr_city" placeholder="City">
          </div>
          <div class="form-group">
            <label for="usr_postcode">Post Code</label>
            <input type="text" class="form-control" id="usr_postcode" placeholder="Post Code">
          </div>
          <div class="form-group">
            <label for="usr_country">Country</label>
            <select class="form-control">
              <option>Alaska</option>
              <option>Botswana</option>
              <option>Colombia</option>
              <option>Denmark</option>
              <option>Finland</option>
              <option>India</option>
              <option>Letonia</option>
              <option>Poland</option>
              <option>Zimbaue</option>
            </select>
          </div>
          <div class="form-group">
            <label for="usr_phone">Phone</label>
            <input type="tel" class="form-control" id="usr_phone" placeholder="Phone">
          </div>
          <div class="form-group">
            <label for="usr_birth">Date of birth</label>
            <input type="date" class="form-control" id="usr_birth" placeholder="Date of birth">
          </div>
        </div><!-- .col-md-6 -->
      </div><!-- .row -->
      <div class="row" id="ch-password">
        <div class="col-md-6">
          <%= f.password_field(:password) %><em class="help-block">(Leave blank if you don't want to change it)</em>
          <%= f.password_field(:password_confirmation) %>
        </div>
        <div class="col-md-6">
          <%= f.password_field :current_password, label: "Current password" %>
          <em class="help-block">(We need your current password to confirm your changes)</em>
        </div>
      </div><!-- .row -->    
      <div class="form-group col-md-6 col-md-push-3">
        <%= f.submit("Save") %>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <p class="text-left">Unhappy?<%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-warning", data: { confirm: "Are you sure?" }, method: :delete %></p>
        </div>
      </div>
      <div class="pull-left"><%= link_to "Back", :back %></div>
    <% end %>
  </div><!-- .col-md-8 -->
</div><!-- .row -->

