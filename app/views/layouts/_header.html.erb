<header>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>  

  <div class="container header top">
    <nav>
      <ul class="nav">
        <li><%= link_to 'Home', root_path, 'id'=>'nav-home' %>
        <li class="dropdown">
          <%= link_to raw('About<span class="caret"></span>'), '', 'class'=>'dropdown-toggle', 'data-toggle'=>'dropdown', 'id'=>'nav-about' %>
          <ul class="dropdown-menu">
            <li><%= link_to 'About the Company', about_company_path %>
            <li><%= link_to 'About the Team', about_team_path %>
          </ul>
        </li>
        <li><%= link_to 'Destinations', destinations_path, 'id'=>'nav-destinations' %>
        <li data-no-turbolink><%= link_to 'Contact', contact_path, 'id'=>'nav-contact' %>
        <% if user_signed_in? %>
          <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete, 'id'=>'nav-signout' %></li>
          
        <% else %>
          <li><%= link_to 'Log In', new_user_session_path, 'id'=>'nav-signin' %>|
          <%= link_to 'Sign Up', new_user_registration_path, 'id'=>'nav-signup' %></li>
        <% end %>
      </ul>
      <!-- <div class="login">
 -->    <% if user_signed_in? %>
          <ul class="login">
            <li>You are logged in as:</li>
            <li class="dropdown">
              <%= link_to raw(current_user.email + '<span class="caret"></span>'), '', 'class'=>'dropdown-toggle', 'data-toggle'=>'dropdown', 'id'=>'nav-profile' %>
              <ul class="dropdown-menu profile">
                <% if current_user.is_admin == true %>
                  <li><%= link_to 'Admin Dashboard', rails_admin_path %>
                <% elsif %>
                  <li><%= link_to 'Profile', user_path(current_user.id) %>
                <% end %>
              </ul>
            </li>
          </ul>
        <% end %>
    <!--   </div> -->
    </nav>
    
    
    <% flash.each do |key, value| %>
      <% if key == 'alert' %>
        <div class="alert alert-danger message"><%=value%></div>
      <% elsif key == 'notice' %>
        <div class="alert alert-success message"><%=value%></div>
      <% end %>
    <% end %>
  </div><!-- .container --> 

 <div id="content">
  <div data-ride="carousel"  class="carousel slide" id="myCarousel">
    <ol class="carousel-indicators">
      <li class="" data-slide-to="0" data-target="#myCarousel"></li>
      <li data-slide-to="1" data-target="#myCarousel" class="active"></li>
      <li data-slide-to="2" data-target="#myCarousel" class=""></li>
    </ol>
    <div class="carousel-inner">
      <div class="item active">
        <img src="/images/mountainclimber.jpg" alt="">
        <div class="container">
          <h1>Example Headline</h1>
          <p>A longer summary of what we do</p>
          <p><a role="button" href="#" class="btn btn-lg btn-info">Sign up today</a></p>
        </div><!-- .container -->
      </div><!-- .item -->
      <div class="item">
        <img src="/images/sea_traveller.jpg" alt="">
        <div class="container">
          <h1>Second Headline</h1>
          <p>Description of the second slide</p>
          <p><a role="button" href="#" class="btn btn-lg btn-info">Read more here</a></p>
        </div><!-- .container -->
      </div><!-- .item -->
      <div class="item">
        <img src="/images/desert-1.jpg" alt="">
        <div class="container">
          <h1>Third Headline</h1>
          <p>One more slide about the product</p>
          <p><a role="button" href="#" class="btn btn-lg btn-info">Features</a></p>
        </div><!-- .container -->
      </div><!-- .item -->
    </div><!-- .carousel inner -->
    <a data-slide="prev" href="#myCarousel" class="left carousel-control"><span class="glyphicon glyphicon-chevron-left"></span></a>
    <a data-slide="next" href="#myCarousel" class="right carousel-control"><span class="glyphicon glyphicon-chevron-right"></span></a>
  </div><!-- .carousel -->
</div>

</header>