<% @body_id = 'blog' %>
<div class="content">
  <div class="container">
    <div class="row-testimonials">
      <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h2 class="panel-title">Articles</h2>
          </div>
          <div class="panel-body">
            <% @articles.each do |article| %>
              <ul class="list-group">
                <li class="list-group-item"><%= link_to article.title, article %></li>
              </ul>
            <% end %>
          </div>
          <div class="panel-footer">
            <%= link_to 'New Article', "#", data: {target: "#myModal", toggle: "modal", keyboard: "true"} %>
          </div>
        </div>   
        <div class="article modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">New Article</h3>
              </div>
              <div class="modal-body">
                <%= form_for(@article) do |f| %>
                  <% if @article.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@article.errors.count, 'error') %> prohibited this article from being saved:</h2>
                      <ul>
                        <%= @article.errors.fullmessages.each do |messages| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.label :title %><br>
                    <%= f.text_field :title, {class: 'form-control', placeholder: 'Title'} %>
                  </div>
                  <div class="form-group">
                    <%= f.label :author %><br>
                    <%= f.text_field :author, {class: 'form-control', placeholder: 'Author'} %>    
                  </div>
                  <div class="form-group">
                    <%= f.label :date %><br>
                    <%= f.text_field :date, {class: 'form-control', placeholder: 'Date'} %>
                  </div>
                  <div class="form-group">
                    <%= f.label :body %><br>
                    <%= f.text_area :body, {class: 'form-control', placeholder: 'Body', rows: '10'} %>
                  </div>
                  <div class="actions">
                    <%= f.submit nil, {class:'btn btn-success'} %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div> <!-- col-xs-7 col-sm-7 col-md-7 col-lg-7 -->
    </div> <!-- row-testimonials -->
  </div> <!-- container -->
</div> <!-- content -->
