<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Request a brochure</h3>
  </div>
  <div class="panel-body">
    <div class="col-xs-1 col-sm-8 col-md-8 col-lg-8">
      <a href="">Please enter your details below and we will send you the brochures of your choice as soon as possible.</a>
    </div>
    <div class="col-xs-1 col-sm-4 col-md-4 col-lg-4">
      <%= link_to(brochure_path) do %>
        <%= image_tag("/images/brochure_icon.png") %>
      <% end %>
    </div>
    <div style="clear:both;"></div>
  </div>
</div>
